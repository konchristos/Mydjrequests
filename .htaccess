Options -Indexes

<IfModule mod_rewrite.c>
RewriteEngine On

# Allow /r2/{uuid} → /request_v2/index.php?event={uuid}
RewriteCond %{REQUEST_URI} ^/r2/
RewriteRule ^r2/([^/]+)/?$ request_v2/index.php?event=$1 [L,QSA]

# Allow /r/{uuid} → /request/index.php?event={uuid}
RewriteCond %{REQUEST_URI} ^/r/
RewriteRule ^r/([^/]+)/?$ request/index.php?event=$1 [L,QSA]

# Allow /request/{uuid} → /request/index.php?event={uuid}
RewriteCond %{REQUEST_URI} ^/request/
RewriteRule ^request/([^/]+)/?$ request/index.php?event=$1 [L,QSA]
</IfModule>

